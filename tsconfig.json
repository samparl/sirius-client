{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "assets/*": [
        "assets/*"
      ],
      "common/components": [
        "src/common/components"
      ],
      "common/services": [
        "src/common/services"
      ],
      "common/utils": [
        "src/common/utils"
      ],
      "common/types": [
        "src/common/types"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "useTranspileModule": true
  }
}