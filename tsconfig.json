{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "services": ["src/services"],
            "utils": ["src/utils"],
            "types": ["src/types"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "useTranspileModule": true
    }
}
